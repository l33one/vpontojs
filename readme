    # inicilizar npm run dev

# criando docker do banco de dados
    docker run --name vpontojs-db -e MYSQL_ROOT_PASSWORD=vPonto@1220! -v "/home/leewan/Documentos/projetos/vpontojs/database":/var/lib/mysql -p 0.0.0.0:3306:3306 --ip=172.17.0.7 -d mysql/mysql-server

# dependencia banco de dados
